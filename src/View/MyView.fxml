<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import View.MazeDisplayer?>

<BorderPane stylesheets="@ViewStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <left>
      <VBox prefHeight="206.0" prefWidth="190.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="112.6" minWidth="10.0" prefWidth="104.2" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="98.8" minWidth="10.0" prefWidth="79.2" />

               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <Label prefHeight="18.0" prefWidth="100.0" text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <TextField fx:id="textField_mazeRows" prefHeight="26.0" prefWidth="67.0" text="50" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               <TextField fx:id="textField_mazeColumns" prefHeight="26.0" prefWidth="58.0" text="50" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Button onAction="#GenerateMaze" prefHeight="26.0" prefWidth="183.0" text="Generate Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
               <Button cancelButton="true" onAction="#SolveMaze" prefHeight="26.0" prefWidth="182.0" text="Solve Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
            </GridPane>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
   <bottom>
      <HBox prefHeight="18.0" prefWidth="64.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Status bar" />
         </children>
      </HBox>
   </bottom>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Load" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Properties" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Exit">
                  </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                  </Menu>
                  <Menu mnemonicParsing="false" text="About">
                  </Menu>
               </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <center>
      <Pane prefHeight="500.0" prefWidth="500" BorderPane.alignment="CENTER" >
         <children>
            <MazeDisplayer fx:id="mazeDisplayer" height="278.0" layoutY="122.0" width="400" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Pane>
   </center>
</BorderPane>
